<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <corners android:radius="3dip" />
            <stroke android:width="2dip" android:color="#ff33b5e5" />
            <solid android:color="#ff0099cc" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle" >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff0099cc" />
            <!--<solid android:color="#ff00ddff" />-->
            <solid android:color="#f00" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ff33b5e5" />
            <solid android:color="#ff33b5e5" />
        </shape>
    </item>
</selector>