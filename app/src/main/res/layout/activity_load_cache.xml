<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/bg_login_blue">
    <LinearLayout
        android:layout_width="@dimen/abc_dialog_fixed_width_major"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".Login"
        android:orientation="vertical"
        android:layout_marginTop="88dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#edeef0"
        android:weightSum="1">

        <TextView
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:text="@string/no_cache"
            android:textStyle="bold"
            android:textAlignment="center"
            android:inputType="textCapSentences"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textIsSelectable="false" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:soundEffectsEnabled="false"
            android:src="@drawable/logo_app"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <ProgressBar
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pbLoadCacheBar"
            android:max="100"
            android:progress="0"
            android:indeterminate="false" />

        <TextView
            android:layout_width="287dp"
            android:layout_height="wrap_content"
            android:text="@string/wait_minutes"
            android:textColorLink="#039be5"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />

    </LinearLayout>

</RelativeLayout>